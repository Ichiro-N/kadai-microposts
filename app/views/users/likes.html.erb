<ul class="media-list">
  <% @bookmarks.each do |bookmark| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(bookmark.user, { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to bookmark.user.name, user_path(bookmark.user) %> <span class="text-muted">posted at <%= bookmark.created_at %></span>
        </div>
        <div>
          <p><%= bookmark.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @bookmarks %>
</ul>